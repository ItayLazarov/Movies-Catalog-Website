@using MoviesCatalogLibrary.Models

@{
     ViewData["Title"] = "Movies Catalog";
}

@model List<MovieDetails>

<div >
    <table class="table table-striped" border="1">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Poster</th>
                <th>Plot</th>
                <th>IMDB Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td><a href="https://localhost:44380/Home/FullDetailsMovie/@movie.Title">@movie.Title</a></td>
                    <td><img src="@movie.Poster" width="200" height="300"></td>
                    <td>@movie.Title</td>
                    <td>@movie.Plot</td>
                    <td>@movie.imdbRating</td>
                </tr>
            }
        </tbody>
    </table>
</div>

